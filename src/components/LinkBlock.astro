---
import type { Link } from '../config/site';

export interface Props {
  link: Link;
}

const { link } = Astro.props;

const colorMap = {
  green: '#05ce78',
  blue: '#0095ff',
  red: '#FF0000',
  black: '#000',
  facebook: '#1877f2',
  purple: '#b900b4',
  yellow: '#ffd000'
};

const bgColor = link.color ? colorMap[link.color] : '#05ce78';
---

<a class="link-block" href={link.url} rel="noopener" target="_blank">
  <div class="icon-wrapper" style={`background-color: ${bgColor};`}>
    <i class={`icon-${link.icon}`} aria-hidden="true"></i>
  </div>
  <span class="link-text">{link.title}</span>
</a>

<style>
  .link-block {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.7);
    padding: 0;
    margin-bottom: 16px;
    min-height: 72px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    overflow: hidden;
    width: 100%;
  }

  :global(.dark) .link-block {
    background: rgba(30, 41, 59, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(71, 85, 105, 0.3);
  }

  .link-block:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  :global(.dark) .link-block:hover {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.5), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
  }

  .link-block:active {
    transform: translateY(0);
  }

  .icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72px;
    min-width: 72px;
    height: 72px;
    color: #fff;
    font-size: 1.5rem;
  }

  .link-text {
    flex: 1;
    padding: 0 24px;
    font-size: 1rem;
    font-weight: 500;
    color: #1a1a1a;
    text-align: left;
  }

  :global(.dark) .link-text {
    color: #f0f0f0;
  }

  @media (max-width: 480px) {
    .link-block {
      min-height: 64px;
    }

    .icon-wrapper {
      width: 64px;
      min-width: 64px;
      height: 64px;
      font-size: 1.25rem;
    }

    .link-text {
      padding: 0 16px;
      font-size: 0.95rem;
    }
  }
</style>